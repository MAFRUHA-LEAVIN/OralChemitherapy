{% extends "base/base.html.twig" %}

{# Beginning of Page Header #}
{% block title %}
Forgot Password
{% endblock title %}

{% block pageStylesheets %}
    <link href="/css/signin.css" rel="stylesheet">
{% endblock pageStylesheets %}

{# Beginning of Page Content #}
{% block header %}
    <div class="page-header">
        <img src="/img/logo.png" alt="AntiC Cancer App" class="center-block" style="width:200px;">
    </div>
{% endblock header %}

{% block content %}
    
    <form action="{{ path('user.iforgot') }}" method="POST" role="form" class="form-signin">    
        {% if app.session.flashbag.has('success') %}
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">{{ flashMessage }}</div>
            {% endfor %}
        {% endif %}
        {% if app.session.flashbag.has('notice') %}
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-info">{{ flashMessage }}</div>
            {% endfor %}
        {% endif %}
        <h2 class="form-signin-heading">Enter your email to reset password:</h2>
        <input class="form-control" placeholder="Email address" type="email" name="email">
        <button class="btn btn-lg btn-primary btn-block iforgot-reset" type="submit">Reset</button>
        <a class="btn btn-sm btn-info btn-block" href="{{ path('user.login') }}">Back to Login Screen</a>
    </form>
{% endblock content %}